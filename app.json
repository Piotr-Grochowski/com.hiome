{
  "id": "com.hiome",
  "version": "2.1.0",
  "compatibility": ">=3.0.0",
  "sdk": 2,
  "name": {
    "en": "Hiome"
  },
  "description": {
    "en": "Unlock the full power of your smart home!"
  },
  "category": [
    "appliances"
  ],
  "capabilities": {
    "measure_ppl_count": {
      "type": "number",
      "title": {
        "en": "People count"
      },
      "units": {
        "en": "person(s)"
      },
      "insights": false,
      "desc": {
        "en": "Number of people in a room"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "/assets/ppl_count.svg",
      "$flow": {
        "triggers": [
          {
            "id": "measure_ppl_count_changed",
            "title": {
              "en": "The number of people in the room changed"
            },
            "tokens": [
              {
                "name": "measure_ppl_count",
                "title": {
                  "en": "People count"
                },
                "type": "number",
                "example": 2
              }
            ]
          }
        ]
      }
    }
  },
  "permissions": [],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Piotr Grochowski",
    "email": "piotr@grochowski.org"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "GrochowskiPiotr"
      }
    }
  },
  "drivers": [
    {
      "id": "OccupancySensor",
      "name": {
          "en": "Occupancy Sensor"
        },
      "class": "sensor",
      "capabilities": ["alarm_motion","measure_ppl_count","button.increment","button.decrement","button.zero"],
      "capabilitiesOptions": {
        "button.increment": {
          "maintenanceAction": true,
          "title": { 
             "en": "Increment people count"
          },
          "desc": { 
             "en": "Adds 1 person to people count in the room."
          }        
        },
        "button.decrement": {
          "maintenanceAction": true,
          "title": { 
             "en": "Decrement people count"
          },
          "desc": { 
             "en": "Removes 1 person from people count in the room."
          }        
        },        
        "button.zero": {
          "maintenanceAction": true,
          "title": { 
             "en": "Reset people count"
          },
          "desc": { 
             "en": "Sets people count in the room to 0."
          }        
        }
      },
      "images": {
        "large": "/drivers/OccupancySensor/assets/images/large.jpg",
        "small": "/drivers/OccupancySensor/assets/images/small.jpg"
      },
      "energy": {
        "approximation": {
          "usageConstant": 0
        }
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices", 
          "navigation": {
            "next": "add_my_devices" 
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices" 
        }      ],
        "settings": [
        {
          "type": "group",
          "label": {
            "en": "General"
          },
          "children": [
            {
              "id": "core",
              "type": "label",
              "value": "primary",
              "label": {
                "en": "Hiome Core"
              }
            },
            {
              "id": "mqttid",
              "type": "label",
              "value": "",
              "label": {
                "en": "MQTT ID"
              }
            }

          ]
        }
        ]
    },
    {
      "id": "DoorSensor",
      "name": {
          "en": "Door Sensor"
        },
      "class": "sensor",
      "capabilities": ["alarm_contact","measure_battery","alarm_battery"],
      "images": {
        "large": "/drivers/DoorSensor/assets/images/large.jpg",
        "small": "/drivers/DoorSensor/assets/images/small.jpg"
      },
      "energy": {
        "approximation": {
          "usageConstant": 0.3
        },
        "batteries":["INTERNAL"]
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices", 
          "navigation": {
            "next": "add_my_devices" 
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices" 
        }      
      ],
      "settings": [
      {
        "type": "group",
        "label": {
          "en": "Core"
        },
        "children": [
          {
            "id": "core",
            "type": "label",
            "value": "primary",
            "label": {
              "en": "Hiome Core"
            }
          },
          {
            "id": "mqttid",
            "type": "label",
            "value": "",
            "label": {
              "en": "MQTT ID"
            }
          }
    
        ]
      }
      ]
    }        
  ],
  "flow": {
    "actions": [
      {
        "id": "occupancy_increment",
        "title": {
          "en": "Increment occupancy in a room"
        },
        "args": [
          {
            "name": "my_device",
            "type": "device",
            "filter": "driver_id=OccupancySensor"
          }
        ]
      },
      {
        "id": "occupancy_decrement",
        "title": {
          "en": "Decrement occupancy in a room"
        },
        "args": [
          {
            "name": "my_device",
            "type": "device",
            "filter": "driver_id=OccupancySensor"
          }
        ]
      },
      {
        "id": "occupancy_zero",
        "title": {
          "en": "Reset occupancy in a room to zero"
        },
        "args": [
          {
            "name": "my_device",
            "type": "device",
            "filter": "driver_id=OccupancySensor"
          }
        ]
      },
      {
        "id": "occupancy_set",
        "title": {
          "en": "Set number of people in a room"
        },
        "args": [
          {
            "name": "my_device",
            "type": "device",
            "filter": "driver_id=OccupancySensor"
          },
          {
            "name": "val",
            "type": "number",
            "min":  0,
            "max":  99,
            "step": 1,
            "placeholder": "Number of people"
          }

        ]
      }
    ]
  }
}